<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
        <!-- Connection settings -->
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/dayclass</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    <!-- <property name="hibernate.connection.pool_size">1</property> -->
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
    
    <!-- Annotated entity classes -->
    <mapping class="Socio" package="Entidades"/>
    <mapping class="Actividad" package="Entidades"/>
    <mapping class="Instructor" package="Entidades"/>
    <mapping class="Inscripcion" package="Entidades"/>
    <mapping class="Cuota" package="Entidades"/>
    <mapping class="ParametroPrecioCuota" package="Entidades"/>
    <mapping class="ParametroMontoInscripcion" package="Entidades"/>
    <mapping class="Dia" package="Entidades"/>
    <mapping class="Horario" package="Entidades"/>
    <mapping class="EstadoSocio" package="Entidades"/>
    <mapping class="SocioEstado" package="Entidades"/>
    <mapping class="HabilitacionMedica" package="Entidades"/>	
  </session-factory>
</hibernate-configuration>